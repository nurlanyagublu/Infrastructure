# Project Configuration
project_name = "myapp"
aws_region   = "us-east-1"

# Networking Configuration - Development
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.10.0/24", "10.0.20.0/24"]

# Database Configuration - Cost-optimized for development
db_engine        = "postgres"
db_engine_version = "15.4"
db_instance_class = "db.t3.micro"      # ~$15/month

# Storage Configuration
db_allocated_storage     = 20
db_max_allocated_storage = 100
db_storage_type         = "gp2"

# Database Details
db_name     = "myapp_dev"
db_username = "admin"
# db_password should be set via environment variable: TF_VAR_db_password

# Backup Configuration - Minimal for dev
backup_window      = "03:00-04:00"
maintenance_window = "sun:04:00-sun:05:00"

# ECS Configuration - Development

# Domain Configuration
domain_name = "nurlanskillup.pp.ua"  # Update with your domain

# Security Configuration
enable_cicd_role    = true
github_repository   = "nurlanyagublu/reponame"  # Update with your GitHub repo
# github_oidc_provider_arn = ""  # Will be created automatically

# Tags
tags = {
  Environment = "dev"
  Project     = "myapp"
  Owner       = "nurlan-dev"
  CostCenter  = "development"
}

# ============================================================================
# Flask Application Configuration - Development
# ============================================================================

# Application Configuration
app_image = ".dkr.ecr.us-east-1.amazonaws.com/myapp-dev-flask-api:latest"
app_port  = 8080


# CORS Configuration - Development (permissive for testing)
cors_origins = "http://localhost:3000,http://localhost:4200,https://dev.nurlanskillup.pp.ua"

# Health Check Configuration
health_check_path = "/api/health"

# Flask Secrets (Managed by Security Module)
# The security module automatically generates and manages all secrets
# Secrets are stored in: myapp/dev/app-secrets
# Contains: flask_secret, jwt_secret, api_key, encryption_key
